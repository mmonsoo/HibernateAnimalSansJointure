<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
<class name="com.mmonsoor.entity.Animal" table="animal">
<id name="id" type="int">
<column name="id" />
<generator class="native" />
</id>
<property name="nom" type="java.lang.String">
<column name="nom" />
</property>
<property name="espece" type="java.lang.String">
<column name="espece" />
</property>
<property name="age" type="short">
<column name="age" />
</property>
</class>
</hibernate-mapping>